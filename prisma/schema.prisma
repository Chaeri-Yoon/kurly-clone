// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id           Int     @id @default(autoincrement())
  userId       String  @unique
  password     String
  salt         String
  name         String
  email        String?
  contact      String?
  address      String?
  cartProducts Cart[]
}

model Product {
  id             Int         @id @default(autoincrement())
  category       Category    @default(RECOMMENDATION)
  name           String      @unique
  salePercentage Int
  originalPrice  Int
  image          String
  description    String?
  sellingUnit    String?
  weight         String?
  origin         String?
  packageType    PackageType
  addedToCartBy  Cart[]
}

model Cart {
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  userId    Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  productId Int
  quantity  Int     @default(1)

  @@id([userId, productId])
}

enum Category {
  RECOMMENDATION
  SALE
  MEETPRICE
  TOPREVIEW
  HOT
  LASTSALE
}

enum PackageType {
  ROOM_PAPER
  COOL_STYROFOAM
  ICE_STYROFOAM
}
